;==================================================
;一天结束时的呢喃（未面识则不会触发）
;--------------------------------------------------
;ERB\イベント関連\AFTERTRA.ERB
;==================================================
@M_KOJO_AME_EVENT_K36_31(ARG, ARG:1)
#LOCALSIZE 1
#LOCALSSIZE 1
;口上角色编号 = TARGET
;ARG为没见面的天数
;--------------------------------------------------
;是否启用（= 0，不启用；= 1，启用）
LOCAL = 1
;-------------
IF LOCAL
	;-------------------------------------------------
	;禁用自慰显示：将积攒度临时储存起来
	;-------------------------------------------------
	LOCAL = CFLAG:积攒度
	IF LOCAL > 850 - 300 * TALENT:自慰狂
		;-------------------------------------------------
		;自定义自慰机制
		;-------------------------------------------------
		LOCAL = 100 + POWER(MIN(ABL:欲望, 20), 2) / 2
		EXP:自慰経験 += (CFLAG:积攒度 - LOCAL) / (100 + 100 / (ABL:自慰中毒 + 1))
	ENDIF
	CFLAG:AME36_HORNINESS_TEMP = LOCAL
	CFLAG:积攒度 = 0
	;-------------------------------------------------
	;根据当日陪伴值增加相守值，并重置陪伴值
	;-------------------------------------------------
	IF CFLAG:AME36_ATTENTION > 30
		CFLAG:AME36_PERSISTENCE += 3
	ELSEIF CFLAG:AME36_ATTENTION > 10
		CFLAG:AME36_PERSISTENCE += 2
	ELSEIF CFLAG:AME36_ATTENTION > 5
		CFLAG:AME36_PERSISTENCE += 1
	ENDIF
	CFLAG:AME36_ATTENTION = 0
	;-------------------------------------------------
	;相识的取得
	;-------------------------------------------------
	CALLF AME36_RECOLLECTION()
	IF CFLAG:AME36_BREAKTHROUGH && AME36_FIRSTTIME(2)
		PRINTL
		PRINTFORMDL 似乎已经和阿燐混熟了呢……
		CALL COLORMESSAGE("这样的话、应该可以一起做更多事情了吧？", C_YELLOW, 2, 1)
		PRINTL
		CFLAG:AME36_ACQUAINTANCE = 1
	ENDIF
	;-------------------------------------------------
	;今日见过面
	;-------------------------------------------------
	IF ARG == 0
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;一周没有见面了（关于未见面天数的差分，请自行设置）
	;-------------------------------------------------
	IF ARG == 7
		RETURN 1
	ENDIF
ENDIF
RETURN 1

