@M_KOJO_AME_EXTRASOURCE_SCOM_K36_GENERAL
#DIM COM_EQUIVALENT
#DIM PERCENTAGE_DUPE
#DIM EXP_ADD
;--------------------------------------------------
;标记本回合确实被选中为TARGET
;用于清除非TARGET的PALAM上升
;--------------------------------------------------
CFLAG:AME36_IS_TARGET = 1
;--------------------------------------------------
;随当天执行次数效应递减
;--------------------------------------------------
IF TFLAG:50 >= 60 && TFLAG:50 < 100 && TFLAG:50 != 63
    ;--------------------------------------------------
    ;当阿燐很讨厌你做的事情时，什么都不获得，并清空正面SOURCE
    ;--------------------------------------------------
    IF CFLAG:AME36_NO_RECOLLECTION_THIS_TIME
        CALL AME36_TIMES_RELAVENT_SOURCE(0)
        RETURN -1
    ENDIF
    AME36_SCOM_COUNTER:(TFLAG:50 - 60) += 1
    SELECTCASE TFLAG:50
        ;--------------------------------------------------
        ;MONO：掏耳朵、抱枕、亲额头
        ;--------------------------------------------------
        CASE 60, 61, 62
            SELECTCASE AME36_SCOM_COUNTER:(TFLAG:50 - 60)
                CASE 1
                    PERCENTAGE_DUPE = 100
                    CFLAG:AME36_ATTENTION += 2
                    EXP_ADD = 1
                CASE 2
                    PERCENTAGE_DUPE = 10
                    EXP_ADD = -2
                CASE IS >= 3
                    PERCENTAGE_DUPE = 5
                    EXP_ADD = -3
            ENDSELECT
        ;--------------------------------------------------
        ;拉手：按照牵手计算
        ;--------------------------------------------------
        CASE 80
            SELECTCASE AME36_COM_COUNTER:(603 - 300)
                CASE 1
                    PERCENTAGE_DUPE = 100
                    CFLAG:AME36_ATTENTION += 2
                    EXP_ADD = 2
                CASE 2 TO 4
                    PERCENTAGE_DUPE = 80
                    CFLAG:AME36_ATTENTION += 2
                    EXP_ADD = 2
                CASE 5 TO 8
                    PERCENTAGE_DUPE = 65
                    CFLAG:AME36_ATTENTION ++
                    EXP_ADD = 1
                CASE IS >= 9
                    PERCENTAGE_DUPE = 50
                    CFLAG:AME36_ATTENTION ++
            ENDSELECT
        ;--------------------------------------------------
        ;其他情况，按照衰减最快处理
        ;--------------------------------------------------
        CASEELSE
            SELECTCASE AME36_SCOM_COUNTER:(TFLAG:50 - 60)
                CASE 1
                    PERCENTAGE_DUPE = 100
                CASE 2
                    PERCENTAGE_DUPE = 10
                CASE IS >= 3
                    PERCENTAGE_DUPE = 5
            ENDSELECT
            EXP_ADD = -10
    ENDSELECT
    ;--------------------------------------------------
    ;根据陷落状态追加经验、减少SOURCE惩罚
    ;--------------------------------------------------
    SELECTCASE AME36_FALL_STATE()
        CASE 2
            EXP_ADD ++
        CASE 3
            EXP_ADD += 2
        CASE 4
            EXP_ADD += 3
    ENDSELECT
    ;--------------------------------------------------
    ;经验与SOURCE惩罚的结算
    ;--------------------------------------------------
    IF EXP_ADD > 0
        SELECTCASE TFLAG:50
            CASE 60, 61, 62
                CALL AME36_ADD_SCOM_RECOLLECTION(TFLAG:50)
            CASE 80
                CALL AME36_ADD_COM_RECOLLECTION(603, EXP_ADD)
        ENDSELECT
    ENDIF
    CALL AME36_TIMES_RELAVENT_SOURCE(PERCENTAGE_DUPE)
ENDIF
RETURN 0

